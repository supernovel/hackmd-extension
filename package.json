{
    "name": "hackmd-extension",
    "extensionName": "hackmd-extension",
    "version": "0.2.0",
    "description": "Hackmd.io Extension",
    "main": "src/manifast.json",
    "watchPort": "8091",
    "scripts": {
        "prettier:check": "prettier --check \"**/*.{ts,tsx,js,json,md,html,vue}\"",
        "prettier:fix": "prettier --write \"**/*.{ts,tsx,js,json,md,html,vue}\"",
        "clean:chrome": "gulp clean --vendor chrome",
        "build:chrome": "gulp --vendor chrome --production",
        "build:chrome:dev": "gulp --vendor chrome",
        "watch:chrome": "gulp watch --vendor chrome",
        "clean:firefox": "gulp clean --vendor firefox",
        "build:firefox": "gulp --vendor firefox --production",
        "build:firefox:dev": "gulp --vendor firefox",
        "watch:firefox": "gulp watch --vendor firefox",
        "clean:opera": "gulp clean --vendor opera",
        "build:opera": "gulp --vendor opera --production",
        "build:opera:dev": "gulp --vendor opera",
        "watch:opera": "gulp watch --vendor opera",
        "clean": "npm run clean:chrome && npm run clean:firefox && npm run clean:opera",
        "build": "npm run build:chrome && npm run build:firefox && npm run build:opera",
        "build:dev": "npm run build:chrome:dev && npm run build:firefox:dev && npm run build:opera:dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/supernovel, swpark/hackmd-extension.git"
    },
    "author": "supernovel, swpark (supernovel@lucentblock.com)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/supernovel, swpark/hackmd-extension/issues"
    },
    "homepage": "https://github.com/supernovel, swpark/hackmd-extension#readme",
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@babel/register": "^7.9.0",
        "@types/socket.io": "^2.1.4",
        "@types/socket.io-client": "^1.4.32",
        "ansi-colors": "^4.1.1",
        "babel-loader": "^8.1.0",
        "css-loader": "^3.5.2",
        "del": "^5.1.0",
        "fancy-log": "^1.3.3",
        "gulp": "^4.0.2",
        "gulp-if": "^3.0.0",
        "gulp-imagemin": "^7.0.0",
        "gulp-zip": "^5.0.1",
        "lodash": "^4.17.15",
        "node-sass": "^4.13.1",
        "prettier": "^1.19.1",
        "pug": "^2.0.4",
        "pug-plain-loader": "^1.0.0",
        "require-dir": "^1.2.0",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.1.4",
        "ts-loader": "^6.2.2",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.8.3",
        "vue-loader": "^15.9.1",
        "vue-template-compiler": "^2.6.11",
        "web-ext-types": "^3.2.1",
        "webpack": "^4.43.0",
        "webpack-node-externals": "^1.7.2",
        "webpack-stream": "^5.2.1"
    },
    "dependencies": {
        "@babel/runtime": "^7.9.2",
        "animated-scroll-to": "^2.0.7",
        "axios": "^0.19.2",
        "rxjs": "^6.5.5",
        "scroll-into-view-if-needed": "^2.2.24",
        "socket.io": "^2.3.0",
        "v-click-outside": "^3.0.1",
        "vue": "^2.6.11",
        "vue-icon": "^2.1.2",
        "vue-rx": "^6.2.0",
        "webextension-polyfill-ts": "^0.11.0"
    }
}
